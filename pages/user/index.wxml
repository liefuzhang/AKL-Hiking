<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
            
            <view class='artivity-list'>
              <block wx:for="{{activeLists}}" wx:key="index">
                <view class='date'>
                  <text>{{index}}年</text>
                </view>

                <block wx:for="{{activeLists[index]}}" wx:key="key" wx:for-item="v">
                  <view class='time'>
                    {{v.month}}（星期三）,{{v.startTime}} - {{v.endTime}}
                  </view>
                  <view class='item-list'>
                    {{v.title}},{{v.address}},{{v.people}}人， <navigator url="/pages/activity/detail?id={{v._id}}" hover-class="navigator-hover">查看更多</navigator>
                  </view>
                </block>
              </block>
            </view>

        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <view class='artivity-list'>
              <block wx:for="{{myAactiveLists}}" wx:key="index">
                <view class='date'>
                  <text>{{item.year}}年</text>
                </view>

                <view class='time'>
                  {{item.month}}（星期三）,{{item.startTime}} - {{item.endTime}}
                </view>
                <view class='item-list'>
                  {{item.title}},{{item.address}},{{item.people}}人， <navigator url="/pages/activity/detail?id={{item._id}}" hover-class="navigator-hover">查看更多</navigator>
                </view>
              </block>
            </view>
        </view>
      </view>
      <image open-type="contact" class='kefu'></image>
      <button open-type="contact" class='kefu'>联系客服</button>
    </view>
  </view>
</view>