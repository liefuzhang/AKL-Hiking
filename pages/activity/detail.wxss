.pages {
  padding: 30rpx 50rpx;
  position: relative;
  min-height: 100vh;
}
.pages::after {
  content: "";
  background: url('https://raw.githubusercontent.com/liefuzhang/AKL-Hiking/f36f6964d5d2f9c9ac6c261db2a8d11f4ff34a57/assets/auckland.png');
  background-size: cover;
  background-color: black;
  opacity: 0.5;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;   
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.hiker-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.hiker-item {
  display: flex;
  flex-direction: column;
  max-width: 25%;
  width: 25%;
}

.hiker-name {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
}

.weui-btn {
  position: fixed;
  bottom: 0;
  width: 50%;
  border-radius: 0;
  border: none;
}

.btn-enroll {
  left: 0;
}

.btn-create {
  left: 50%;
}

.btn-share {
  right: 0;
  background: #ffa500 !important;
}

.btn-center {
  width: 25%;
}

.enroll-people {
  color: red;
}

.subject {
  text-align: center;
  margin: 15px 0;
}

.artivity-list {
  height: 32px;
  line-height: 32px;
  vertical-align: middle;
  margin: 10px 0;
}

.artivity-list image {
  width: 24px;
  height: 24px;
  vertical-align: middle;
  margin-right: 20px;
}