@import "../../assets/iconfont/iconfont.wxss";

.pages {
  margin-bottom: 40px;
  padding: 30rpx 50rpx 60rpx;
  position: relative;
  min-height: 100vh;

}

.pages::after {
  content: "";
  background-size: cover;
  background-color: #dddddd;
  opacity: 0.8;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
}

.divLine {
  background: #bbbbbb;
  width: 100%;
  height: 2rpx;
  margin: 8px 0;
}

.name {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}

.head-photo image {
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
  border-radius: 4px;
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.hiker-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.hiker-item {
  display: flex;
  flex-direction: column;
  max-width: 25%;
  width: 25%;
  align-items: center;
}

.hiker-name {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  max-width: 100%;
}

.weui-btn {
  position: fixed;
  bottom: 0;
  width: 50%;
  border-radius: 0;
  border: none;
}

.btn-enroll {
  left: 0;
}

.btn-create {
  left: 50%;
}

.btn-share {
  right: 0;
  background: #ffa500 !important;
}

.btn-center {
  width: 25%;
}

.enroll-people {
  color: red;
}

.subject {
  text-align: center;
  margin: 15px 0;
}

.activity-list-item {
  line-height: 24px;
  vertical-align: middle;
  margin: 10px 0;
}

.iconfont {
  margin-right: 10px;
  display: inline-block;
}

image {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

.activity-list-item image {
  margin-right: 10px;
}

.footer {
  background-color: #dddddd;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 13px;
  padding: 8px 5px;
  margin: 0 -5px;
  box-shadow: 0 10px 20px 0 rgb(0 0 0 / 50%), 0 6px 22px 0 rgb(0 0 0 / 50%);
}

.btn-enroll {
  border-radius: 10px;
  margin-right: 5px;
  margin-left: 5px;
}

.footer-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 14px;
  margin-left: auto;
  position: relative;
}

.footer-item-text {
  font-size: 11px;
}

.footer-item .iconfont {
  margin-right: 0;
}

.footer-text {
  font-size: 14px;
  padding-left: 10px;
  width: 30%;
}

.btn-edit {
  margin: 10px 0;
}

.admin-btns {
  display: flex;
  justify-content: space-between;
}

.help-enroll-buttons {
  display: flex;
  align-items: center;
}

.icon-plus {
  position: relative;
  bottom: 2px;
  font-size: 19px;
  margin-left: 3px;
}

.icon-minus {
  margin-right: 3px;
}

.share-button {
  opacity: 0;
  position: absolute;
  top: 0;
  width: 23px;
  height: 23px;
}