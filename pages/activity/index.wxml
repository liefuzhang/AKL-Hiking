<view class='page__bd'>
  <form>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">活动主题</view>
      </view>

      <view class="weui-cell__bd">
        <view class="weui-input">
          <input value="{{subject}}" bindinput="inputSubject" placeholder="请输入活动主题" class='weui-input' />
        </view>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">开始时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{startDate}}" bindchange="startDateChange">
          <view class="weui-input">{{startDate}} </view>
        </picker>
      </view>

      <view class="weui-cell__bd">
        <picker mode="time" value="{{startTime}}" bindchange="startTimeChange">
          <view class="weui-input">{{startTime}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">结束时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{endDate}}" bindchange="endDateChange">
          <view class="weui-input">{{endDate}} </view>
        </picker>
      </view>

      <view class="weui-cell__bd">
        <picker mode="time" value="{{endTime}}" bindchange="endTimeChange">
          <view class="weui-input">{{endTime}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">报名截止时间</view>
      </view>

      <view class="weui-cell__bd">
        <picker mode="date" value="{{closeDate}}" bindchange="closeDateChange">
          <view class="weui-input">{{closeDate}}</view>
        </picker>
      </view>
      <view class="weui-cell__bd">
        <picker mode="time" value="{{closeTime}}" bindchange="closeTimeChange">
          <view class="weui-input">{{closeTime}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">活动地点</view>
      </view>
      <view class="weui-cell__bd">
        <view class="weui-input">
          <input value="{{address}}" bindinput="inputAddress" placeholder="请输入地点" class='weui-input' />
        </view>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">活动人数</view>
      </view>
      <view class="weui-cell__bd">
        <view class="weui-input">
          <input value="{{people}}" bindinput="inputPeople" placeholder="请输入活动的人数" class='weui-input' type='number'  pattern="\d*" />
        </view>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">负责人电话</view>
      </view>
      <view class="weui-cell__bd">
        <view class="weui-input">
          <input value="{{tel}}" bindinput="inputTel" placeholder="请输入负责人电话" class='weui-input' />
        </view>
      </view>
    </view>
    
    <view class="weui-cells__title">活动介绍</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <textarea class="weui-textarea" placeholder="请输入活动说明" style="height: 3.3em" value='{{remark}}' bindinput="inputRemark" />
        <view class="weui-textarea-counter">0/200</view>
      </view>
    </view>

    <view class="page__bd page__bd_spacing">
      <button class="weui-btn publish" type="primary" bindtap="publish" wx:if="{{id !== ''}}">修改活动</button>
      <button class="weui-btn publish" type="primary" bindtap="publish" wx:else>发布活动</button>
    </view>
  </form>
</view>