<view class='page__bd'>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">主题</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">
        <text class="log-item">{{subject}}</text>
      </view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">报名人数({{peoples.length}}/12)</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">
        <block wx:for="{{peoples}}" wx:key="unique">
          <image src='{{item.pic}}'></image>
          <text class="log-item">{{item.name}}</text>
        </block>
      </view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">开始时间</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">{{startDate}} </view>
    </view>

    <view class="weui-cell__bd">
      <view class="weui-input">{{startTime}}</view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">结束时间</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">{{endDate}} </view>
    </view>

    <view class="weui-cell__bd">
      <view class="weui-input">{{endTime}}</view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">截止时间</view>
    </view>

    <view class="weui-cell__bd">
      <view class="weui-input">{{closeDate}}</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">{{closeTime}}</view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">活动地点</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">{{address}}</view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">限制人数</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">{{people}}</view>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">负责人电话</view>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">{{tel}}</view>
    </view>
  </view>

  <view class="weui-cells__title">活动说明</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        {{remark}}
      </view>
    </view>
  </view>
</view>

<view class="">
    <view bindtap='onEditActivity'>修改活动</view>  ｜
    <text>取消活动</text>
    <button class="weui-btn btn-enroll" type="primary" bindtap='onEnroll'>我要报名</button>
    <button class="weui-btn btn-share" type="primary" bindtap="publish" open-type="share">分享活动</button>
    <!-- <button class="weui-btn" type="warn" bindtap="publish">截止报名</button> -->
    <!-- <button class="weui-btn" type="warn" bindtap="publish">取消报名</button> -->
    <!-- <button class="weui-btn" type="warn" bindtap="publish">活动已结束</button> -->
    <!-- <button class="weui-btn" type="warn" bindtap="publish">人数已满</button> -->
    <!-- <button class="weui-btn" type="default" bindtap="publish">取消/修改</button> -->
</view>