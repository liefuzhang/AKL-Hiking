<view class='pages'>
  <view class="subject">
    {{subject}}
  </view>

  <view class="artivity-list">
    <image src='/assets/ico_people.png'></image>浪子神剑
  </view>

  <view class="artivity-list" wx:if="{{address}}">
    <image src='/assets/ico_address.png'></image>{{address}}
  </view>

  <view class="artivity-list">
    <block wx:if="{{startDate === endDate}}">
      <image src='/assets/ico_time.png'></image>{{startDate}} {{startTime}} - {{endTime}}
    </block>
    <block wx:else>
      <image src='/assets/ico_time.png'></image>{{startDate}} {{startTime}} 到 {{endDate}} {{endTime}}
    </block>
  </view>

  <view class="enrolls">
    <view class="title">
      已报名
      <text class='enroll-people' wx:if="{{userList.length > 0}}">{{userList.length}}</text>人
    </view>
    <view>
      <block wx:for="{{userList}}" wx:key="unique">
      <image class="userinfo-avatar" bindtap='viewUser' src='{{item.userid.avatarUrl}}'></image>
      </block>
    </view>
    <view class="weui-cell__bd">
      <view class="weui-input">
        <block wx:for="{{peoples}}" wx:key="unique">
          <image src='{{item.pic}}'></image>
          <text class="log-item">{{item.name}}</text>
        </block>
      </view>
    </view>
  </view>
  
