  <block wx:if="{{userid && myUserid && userid === myUserid}}">
    <button class="weui-btn btn-enroll" type="primary" bindtap='onManageActivity'>管理活动</button>
    <button class="weui-btn btn-share" type="primary" bindtap="publish" open-type="share">邀请好友</button>
