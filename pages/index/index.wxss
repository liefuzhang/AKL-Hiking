.btn-share {
  width: 90%;
}

.publish {
  width: 80%;
  height: 20rpx;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555556;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  color: #000000;
  background-color: #F8F8F8;
}

.no-found {
  margin-top: 100rpx;
  display: block;
}

.activity-list {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-content: flex-start;
}

.activity-item {
  height: 0%;
  width: 100%;
  font-size: 13px;
  text-align: left;
  background-color: #eeeeee;
  border-radius: 6px;
  padding: 10px 12px;
  margin-bottom: 30px;
  box-shadow: 0 2px 5px 0 rgb(0 0 0 / 16%), 0 2px 10px 0 rgb(0 0 0 / 12%);
  line-height: 22px;
  display: flex;
  position: relative;
}

.activity-item-text {
  display: flex;
  flex-direction: column;
}

.activity-item-photo {
  margin-left: auto;
  padding-top: 10px;
}

.activity-item-photo image {
  max-width: 40vw;
  max-height: 20vh;
  border-radius: 3px;
}

.expired-text {
  position: absolute;
  bottom: 10px;
  left: 90px;
  font-size: 16px;
  color: white;
  padding: 2px;
  border-radius: 2px;
  background-color: #297fa3;
}
